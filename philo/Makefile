NAME		:= philosophers

CC		:= cc
CFLAGS		:= -Wall -Wextra -Werror
DEBUGFLAGS	:= -g
#------------------------------------------------------------------------------#
SRCDIR		:= ./
INCDIR		:= ./
OBJDIR		:= ./obj
#------------------------------------------------------------------------------#
SRC	:=	philosophers.c

OBJ		:= $(addprefix $(OBJDIR)/, $(SRC:.c=.o))
#------------------------------------------------------------------------------#
PHILOH		:= $(INCDIR)/philosophers.h
INC		:= -I $(INCDIR)
#------------------------------------------------------------------------------#
all: $(NAME)

$(NAME): $(OBJDIR) $(OBJ) $(PHILOH)
	$(CC) $(CFLAGS) $(OBJ) $(INC) -o $@

$(OBJDIR)/%.o: $(SRCDIR)/%.c $(PHILOH)
	$(CC) $(CFLAGS) -c $< $(INC) -o $@

$(OBJDIR):
	mkdir -p $(OBJDIR)

clean:
	rm -rf $(OBJDIR)

fclean: clean
	rm -f $(NAME)

re: fclean all
#------------------------------------------------------------------------------#
debug: CFLAGS += $(DEBUGFLAGS)
debug: re
#------------------------------------------------------------------------------#
.PHONY: all clean fclean re debug libftdebug
#------------------------------------------------------------------------------#
